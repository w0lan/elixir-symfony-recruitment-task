{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    {% set q = query %}
    {% set persistKeys = ['first_name', 'last_name', 'gender', 'birthdate_from', 'birthdate_to', 'sort_by', 'sort_dir', 'page', 'page_size'] %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex gap-2">
            <a class="btn btn-primary" href="{{ path('users_new') }}">
                <i class="bi bi-plus-lg"></i> New user
            </a>
            <form class="d-inline" method="post" action="{{ path('users_import') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('import_users') }}">
                {% for key in persistKeys %}
                    {% if q[key] is defined %}
                        <input type="hidden" name="{{ key }}" value="{{ q[key] }}">
                    {% endif %}
                {% endfor %}
                <button class="btn btn-secondary" type="submit">Import</button>
            </form>
        </div>
        {% if meta %}
            <div class="text-muted">
                Found <strong>{{ meta.total }}</strong> users
            </div>
        {% endif %}
    </div>

    <div class="card mb-4 bg-light">
        <div class="card-body">
            {{ form_start(filterForm, { method: 'get' }) }}
                <div class="row g-3">
                    {% if q.sort_by is defined %}<input type="hidden" name="sort_by" value="{{ q.sort_by }}">{% endif %}
                    {% if q.sort_dir is defined %}<input type="hidden" name="sort_dir" value="{{ q.sort_dir }}">{% endif %}
                    <div class="col-md-4">{{ form_row(filterForm.first_name) }}</div>
                    <div class="col-md-4">{{ form_row(filterForm.last_name) }}</div>
                    <div class="col-md-4">{{ form_row(filterForm.gender) }}</div>
                    <div class="col-md-3">{{ form_row(filterForm.birthdate_from) }}</div>
                    <div class="col-md-3">{{ form_row(filterForm.birthdate_to) }}</div>
                    <div class="col-md-2">{{ form_row(filterForm.page_size) }}</div>
                    <div class="col-md-4">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary w-100" type="submit">Apply</button>
                            <a class="btn btn-outline-secondary w-100" href="{{ path('users_index') }}">Reset</a>
                        </div>
                    </div>
                </div>
            {{ form_end(filterForm) }}
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    {% set sortDirNext = sortDir == 'asc' ? 'desc' : 'asc' %}
                    {% for col in sortColumns %}
                        <th>
                            <a href="{{ path('users_index', q|merge({'sort_by': col.field, 'sort_dir': sortBy == col.field ? sortDirNext : 'asc'})) }}" class="text-white text-decoration-none">
                                {{ col.label }}
                                {% if sortBy == col.field %}
                                    {{ sortDir == 'asc' ? '▲' : '▼' }}
                                {% endif %}
                            </a>
                        </th>
                    {% endfor %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.birthdate }}</td>
                        <td>{{ user.gender }}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('users_edit', {id: user.id}) }}">Edit</a>
                                <form class="d-inline" method="post" action="{{ path('users_delete', {id: user.id}) }}" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                    {% for key in persistKeys %}
                                        {% if q[key] is defined %}
                                            <input type="hidden" name="{{ key }}" value="{{ q[key] }}">
                                        {% endif %}
                                    {% endfor %}
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">No results found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if meta %}
        {% set totalPages = (meta.total / meta.pageSize)|round(0, 'ceil') %}
        {% set page = meta.page %}

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item {{ page <= 1 ? 'disabled' }}">
                    <a class="page-link" href="{{ page > 1 ? path('users_index', q|merge({'page': page - 1, 'page_size': meta.pageSize})) : '#' }}">Prev</a>
                </li>
                
                <li class="page-item active">
                    <span class="page-link">Page {{ page }} / {{ totalPages > 0 ? totalPages : 1 }}</span>
                </li>

                <li class="page-item {{ page >= totalPages ? 'disabled' }}">
                    <a class="page-link" href="{{ page < totalPages ? path('users_index', q|merge({'page': page + 1, 'page_size': meta.pageSize})) : '#' }}">Next</a>
                </li>
            </ul>
        </nav>
    {% endif %}
{% endblock %}
